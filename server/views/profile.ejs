    <div class="flex flex-wrap gap-10" style="margin-top: 10px; padding-left: 10px;">

        <% user.posts.forEach((post)=>{ %>
            <div>
                <div class="box">
                    <img src="/images/uploads/<%= post.image %>" alt="">
                </div>
                <h5 style="font-size: small; font-weight: 500; margin-top: 5px;">
                    <%= post.title %>
                </h5>
                <h5 style=" font-weight: 500; font-size: x-small;">
                    <%= post.caption %>
                </h5>
            </div>

            <% }) %>

    </div>
