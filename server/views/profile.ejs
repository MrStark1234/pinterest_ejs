    <div class="local-container">
        <div class="local-card">


            <div class="profile-picture">
                <img src="/images/uploads/<%=user.dp%>" alt="Profile Picture">


            </div>




            <h2 class="name">
                <%=user.fullname %>
            </h2>
            <h3 class="username">@<%=user.username %>
            </h3>
            <p class="tagline">
                <%=user.email %>
            </p>
            <p class="description">Welcome to Pinterest, where inspiration meets organization. Discover a world of
                creativity, curated just for you.<br />"Explore, Pin, and Share Your Inspirations: Your Personalized
                World of Endless Ideas."</p>
            <!-- <a href="/edit" class="button">Edit</a> -->
